<?php
/**
 * The template for displaying archive pages
 *
 * @package {{basicInfo.websiteName}}
 */

get_header(); ?>

<main>
    <h2><?php the_archive_title(); ?></h2>

    <?php
    if (have_posts()) :
        while (have_posts()) : the_post();
            ?>
            <h3>
                <a href="<?php echo get_permalink(); ?>">
                    <?php echo get_the_title(); ?>
                </a>
            </h3>
            <?php the_excerpt();
        endwhile;
    else :
        ?>
        <p>No posts found</p>
    <?php endif; ?>
</main>

<?php get_footer(); ?>