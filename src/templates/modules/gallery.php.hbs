<section class="gallery-module">
    <h2>Gallery</h2>
    <div class="gallery-grid">
        <?php
        // Example: Display 6 latest images from media library
        $images = get_posts([
            'post_type' => 'attachment',
            'post_mime_type' => 'image',
            'posts_per_page' => 6,
        ]);
        if ($images) :
            foreach ($images as $image) :
                $img_url = wp_get_attachment_url($image->ID);
                echo '<img src="' . esc_url($img_url) . '" alt="Gallery image">';
            endforeach;
        else :
            echo '<p>No images found.</p>';
        endif;
        ?>
    </div>
</section> 